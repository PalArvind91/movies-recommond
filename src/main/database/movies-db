DDL Script Example :

CREATE TABLE User (
    user_id SERIAL PRIMARY KEY,
    username VARCHAR(50) NOT NULL UNIQUE,
    password_hash VARCHAR(255) NOT NULL,
    email VARCHAR(100) NOT NULL UNIQUE
);

CREATE TABLE Movie (
    movie_id SERIAL PRIMARY KEY,
    title VARCHAR(100) NOT NULL,
    description TEXT,
    director VARCHAR(100),
    release_date DATE,
    image_url VARCHAR(255)
);

CREATE TABLE Actor (
    actor_id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL
);

CREATE TABLE Genre (
    genre_id SERIAL PRIMARY KEY,
    name VARCHAR(50) NOT NULL UNIQUE
);

CREATE TABLE Movie_Actor (
    movie_id INT REFERENCES Movie(movie_id),
    actor_id INT REFERENCES Actor(actor_id),
    PRIMARY KEY (movie_id, actor_id)
);

CREATE TABLE Movie_Genre (
    movie_id INT REFERENCES Movie(movie_id),
    genre_id INT REFERENCES Genre(genre_id),
    PRIMARY KEY (movie_id, genre_id)
);

CREATE TABLE Rating (
    rating_id SERIAL PRIMARY KEY,
    user_id INT REFERENCES User(user_id),
    movie_id INT REFERENCES Movie(movie_id),
    novelty_score INT CHECK (novelty_score BETWEEN 1 AND 10),
    final_score INT CHECK (final_score BETWEEN 1 AND 10)
);

DML Script Example :
INSERT INTO User (username, password_hash, email) VALUES ('john_doe', 'hashed_password', 'john@example.com');

INSERT INTO Movie (title, description, director, release_date, image_url) VALUES ('Inception', 'A thief who steals corporate secrets...', 'Christopher Nolan', '2010-07-16', 'inception.jpg');

INSERT INTO Actor (name) VALUES ('Leonardo DiCaprio');

INSERT INTO Genre (name) VALUES ('Sci-Fi');

INSERT INTO Movie_Actor (movie_id, actor_id) VALUES (1, 1);
INSERT INTO Movie_Genre (movie_id, genre_id) VALUES (1, 1);